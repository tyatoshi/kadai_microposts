<% if current_user.like?(favarite) %>
  <%= form_with(model: current_user.favarites.find_by(micropost_id: favarite.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :micropost_id, favarite.id %>
    <%= button_tag :type => "submit", :class =>"btn btn-danger" do %>
      <i class="fas fa-heart-broken"></i>
    <% end %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favarites.build, local: true) do |f| %>
    <%= hidden_field_tag :micropost_id, favarite.id %>
    <%= button_tag :type => "submit", :class =>"btn btn-success" do %>
      <i class="fas fa-heart"></i>
    <% end %>
  <% end %>
<% end %>